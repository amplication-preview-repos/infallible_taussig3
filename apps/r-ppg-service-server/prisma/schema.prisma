datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model VitalSigns {
  bloodPressure        String?
  createdAt            DateTime  @default(now())
  heartAge             Int?
  heartRate            Int?
  heartRateVariability Float?
  id                   String    @id @default(cuid())
  respirationRate      Float?
  spO2                 Float?
  timestamp            DateTime?
  updatedAt            DateTime  @updatedAt
  user                 User?     @relation(fields: [userId], references: [id])
  userId               String?
}

model User {
  age             Int?
  createdAt       DateTime     @default(now())
  email           String?      @unique
  firstName       String?
  gender          String?
  id              String       @id @default(cuid())
  lastName        String?
  name            String?
  password        String
  roles           Json
  updatedAt       DateTime     @updatedAt
  username        String       @unique
  vitalSignsItems VitalSigns[]
}
